<h1><%= @student.fullname %></h1>

<h3>Grades</h3>

<p>
  <% if @grades.any? %>
  <ul>
    <% @grades.each do |grade| %>
    <li><%= link_to(grade.name, dashboard_grade_path(grade) )  %>: <%= grade.value %></li>
    <% end %>
  </ul>
  <% else %>
    No grades!
  <% end %>
</p>